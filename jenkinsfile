pipeline {
    agent any
    parameters {
        choice(
            name: 'BRANCH_VERSION',
            choices: ['1.1', '1.2', '1.3', '2.0', '2.1'],
            description: 'Select the branch version to build'
        )
        booleanParam(
            name: 'RUN_TESTS',
            defaultValue: true,
            description: 'Whether to run tests after build'
        )
    }
    
    stages {
        stage('Build') {
            steps {
                echo "Building... ${params.BRANCH_VERSION}"
                // Add your build steps here
            }
        }
        stage('Test') {
            when{
                expression { param.RUN_TESTS }
            }
            steps {
                echo "Testing Branch ${params.BRANCH_VERSION}"
                // Add your test steps here
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
                // Add your deploy steps here
            }
        }
    }
    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}